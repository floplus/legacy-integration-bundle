<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="webfactory.legacy_integration.legacy_application" class="Webfactory\Bundle\LegacyIntegrationBundle\Integration\LegacyApplication">
            <argument>%webfactory.legacy_integration.legacy_application_bootstrap_file%</argument>
            <argument type="service" id="webfactory.legacy_integration.parser" />
        </service>

        <service id="webfactory.legacy_integration.kernel_event_listener" class="Webfactory\Bundle\LegacyIntegrationBundle\EventListener\KernelEventListener">
            <argument type="service" id="webfactory.legacy_integration.legacy_application" />
            <argument type="service" id="annotation_reader"/>
            <tag name="kernel.event_listener" event="kernel.controller" method="onKernelController" />
        </service>

        <service class="Webfactory\Bundle\LegacyIntegrationBundle\Integration\Filter\ControllerAnnotations">
            <argument type="service" id="annotation_reader"/>
            <argument type="service" id="service_container" />
            <tag name="webfactory.integration.filter" />
        </service>

        <service id="webfactory.legacy_integration.parser" class="%webfactory.legacy_integration.parser_class%" />

        <service class="Webfactory\Bundle\LegacyIntegrationBundle\Twig\Extension">
            <argument type="service" id="webfactory.legacy_integration.legacy_application" />
            <tag name="twig.extension" />
        </service>
    </services>
</container>
