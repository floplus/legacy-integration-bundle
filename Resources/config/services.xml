<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="webfactory.legacy_integration.parser.class">Webfactory\Dom\XHTML10ParsingHelper</parameter>
    </parameters>

    <services>
        <service id="webfactory.legacy_integration.legacy_application" class="Webfactory\Bundle\LegacyIntegrationBundle\Integration\LegacyApplication">
            <argument>%webfactory.legacy_integration.legacy_application_bootstrap_file%</argument>
            <argument type="service" id="webfactory.legacy_integration.parser" />
        </service>

        <service id="webfactory.legacy_integration.symfony_application" class="Webfactory\Bundle\LegacyIntegrationBundle\Integration\SymfonyApplication">
            <argument type="service" id="webfactory.legacy_integration.parser" />
        </service>

        <service id="webfactory.legacy_integration.retrofitting_event_listener" class="Webfactory\Bundle\LegacyIntegrationBundle\EventListener\RetrofittingEventListener">
            <argument type="service" id="webfactory.legacy_integration.symfony_application" />
            <argument type="service" id="webfactory.legacy_integration.legacy_application" />
            <tag name="kernel.event_listener" event="kernel.exception" method="onKernelException" />
            <tag name="kernel.event_listener" event="kernel.response" method="onKernelResponse" />
        </service>

        <service id="webfactory.legacy_integration.recycling_event_listener" class="Webfactory\Bundle\LegacyIntegrationBundle\EventListener\RecyclingEventListener">
            <argument type="service" id="webfactory.legacy_integration.legacy_application" />
            <argument type="service" id="annotation_reader"/>
            <tag name="kernel.event_listener" event="kernel.controller" method="onKernelController" />
        </service>

        <service id="webfactory.legacy_integration.parser" class="%webfactory.legacy_integration.parser.class%" />

        <service class="Webfactory\Bundle\LegacyIntegrationBundle\Twig\Extension">
            <argument type="service" id="webfactory.legacy_integration.legacy_application" />
            <tag name="twig.extension" />
        </service>
    </services>
</container>
